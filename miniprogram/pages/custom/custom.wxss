/* 贷款余额对话框样式 */

.reset-btn {
  position: absolute;
  bottom: 0;
  height: 90rpx;
  background-color: #fff;
  color: #000;
  width:50% !important;
  left: 0rpx;
  line-height: 60rpx;
  font-weight: normal;
  border-top: 1px solid #efefef;
    font-size: 30rpx;
}

.confirm-btn {
  font-size: 30rpx;
  width: 50% !important;
  font-weight: normal;
  position: absolute;
  bottom: 0;
  right: 0;
  height: 90rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #0083dd;
  border-radius: 0;
}

.search-btn {
  display: inline-block;
  width: 170rpx !important;
  float: left;
  color: #000;
  background: #f8f3f7;
  margin-left: 10rpx !important;
  font-size: 28rpx;
  font-weight: normal;
  padding: 20rpx !important;
}

.pick-time {
  width: 180rpx;
  height: 70rpx;
  margin-bottom: 50rpx;
  float: left;
  border-bottom: 1px solid #ccc;
  margin-left: 50rpx;
}

.time-line {
  float: left;
  margin-left: 50rpx;
}

.money-box {
  margin: 26rpx 0;
  position: relative;
}

.money-content {
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  border-radius: 6px;
  display: inline-block;
  background-color: #ffd200;
  color: #fff;
}

.sanjiao {
  width: 0px;
  height: 0px;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #ffd200;
  position: absolute;
  bottom: -11rpx;
  left: 20rpx;
}

.ok {
  background-color: #21be4c;
}

.ok-icon {
  background-color: #007c00;
}

.search {
  border-radius: 40px;
  border: 2rpx solid #ccc;
  height: 60rpx;
  color: #666;
  margin: 20rpx 30rpx;
}

.search-content {
  border-bottom: 1px solid #ccc;
  padding: 40rpx 20rpx;
  overflow: hidden;
}

.search-title {
  float: left;
  color: #000;
  font-size: 32rpx;
  margin-left: 10rpx;
  width: 100%;
  text-align: left;
  margin-bottom: 30rpx;
}
